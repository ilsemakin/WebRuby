<div class="row">
  <div class="col-md">
    <h2>Список квартир</h2>
  </div>

  <div class="col-md">
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
      <label class="btn btn-secondary active">
        <input type="radio" name="options" id="option1" autocomplete="off" checked> Район
      </label>

      <label class="btn btn-secondary">
        <input type="radio" name="options" id="option2" autocomplete="off"> Стоимость
      </label>

      <label class="btn btn-secondary">
        <input type="radio" name="options" id="option3" autocomplete="off"> Метраж
      </label>
    </div>
  </div>

</div>

<div class="container">
  <div class="row">
    <div class="col">
      <ul>
        <% @list_apartment.each do |apartment| %>
          <li><%= "Метраж: #{apartment.footage}" %></li>
          <li><%= "Количество комнат: #{apartment.rooms}" %></li>
          <li><%= 'Адрес:' %></li>
            <ul>
              <li><%= "Район: #{apartment.address.district}" %></li>
              <li><%= "Улица: #{apartment.address.street}" %></li>
              <li><%= "Дом: #{apartment.address.house}" %></li>
            </ul>
          <li><%= "Этаж: #{apartment.floor}" %></li>
          <li><%= "Вид дома: #{apartment.type_of_house}" %></li>
          <li><%= "Количество этажей: #{apartment.number_of_floors}" %></li>
          <li><%= "Стоимость: #{apartment.cost}" %></li>
          <br />
        <% end %>
      </ul>
    </div>
  </div>
</div>
