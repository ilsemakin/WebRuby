<div class="row">
  <div class="col-md">
    <h2>Список квартир</h2>
  </div>

  <div class="col-md">
    <div class="btn-group" role="group" aria-label="Basic example">
      <a class="btn btn-secondary" href="/list_apartment/district" role="button">Район</a>
      <a class="btn btn-secondary" href="/list_apartment/cost" role="button">Стоимость</a>
      <a class="btn btn-secondary" href="/list_apartment/footage" role="button">Метраж</a>
    </div>
  </div>

<div class="container">
  <div class="row">
    <div class="col">
      <ul>
        <% @list_apartment.sort_by_footage.each do |apartment| %>
          <li><%= "Метраж: #{apartment.footage}" %></li>
          <li><%= "Количество комнат: #{apartment.rooms}" %></li>
          <li><%= 'Адрес:' %></li>
            <ul>
              <li><%= "Район: #{apartment.address.district}" %></li>
              <li><%= "Улица: #{apartment.address.street}" %></li>
              <li><%= "Дом: #{apartment.address.house}" %></li>
            </ul>
          <li><%= "Этаж: #{apartment.floor}" %></li>
          <li><%= "Вид дома: #{apartment.type_of_house}" %></li>
          <li><%= "Количество этажей: #{apartment.number_of_floors}" %></li>
          <li><%= "Стоимость: #{apartment.cost}" %></li>
          <br />
        <% end %>
      </ul>
    </div>
  </div>
</div>
