<h2>Таблица поставщиков</h2>
<div class="row">
  <div class="col">
    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modal">
      Добавить поставщика
    </button>
  </div>
</div>
<br>

<form action="/add/supplier" method="POST">
  <!-- Modal -->
  <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true">

    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modal">Добавление вида товара</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="col">
            <label for="name_supplier">Введите поставщика</label>
            <input type="text" class="form-control" id="name_supplier" name="name_supplier" placeholder="Введите поставщика" value="<%= @name_supplier %>" required>
          </div>

          <div class="col">
            <label for="address_supplier">Введите адрес поставщика</label>
            <input type="text" class="form-control" id="address_supplier" name="address_supplier" placeholder="Введите адрес поставщика" value="<%= @address_supplier %>" required>
          </div>

          <div class="col">
            <label for="phone_supplier">Введите телефон поставщика</label>
            <input type="text" class="form-control" id="phone_supplier" name="phone_supplier" placeholder="Введите телефон поставщика" value="<%= @phone_supplier %>" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Добавить</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        </div>
      </div>
    </div>
  </div>
</form>

<table class="table table-bordered table-sm">
  <thead>
    <tr>
      <th scope="col" class="table-info align-middle text-center">Редактирование</th>
      <th scope="col" class="table-info align-middle text-center">Поставщик</th>
      <th scope="col" class="table-info align-middle text-center">Адрес</th>
      <th scope="col" class="table-info align-middle text-center">Телефон</th>
    </tr>
  </thead>
  <tbody>
    <% @db.execute 'SELECT * FROM Suppliers ORDER BY name_supplier' do |row| %>
    <tr>
      <td class="w-25 align text-center">
        <div class="form-row">
          <div class="col-4"></div>
            <form action="/delete/supplier/<%= row[0] %>" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-default">
                <div class="col">
                  <span style="font-size:15px; color:red;" class="fa fa-times"></span>
                </div>
              </button>
            </form>
          </div>
        </div>
      </td>
      <td class="align-middle text-center"><%= row[1] %></td>
      <td class="align-middle text-center"><%= row[2] %></td>
      <td class="align-middle text-center"><%= row[3] %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<a href="/main" class="btn btn-secondary active" role="button" aria-pressed="true">На главную</a>
