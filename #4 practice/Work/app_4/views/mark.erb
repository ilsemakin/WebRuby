<h2>Ввод данных об оценке</h2>
<form method="post">
  <div class="form-group">
    <label for="name_course">Введите название курса</label>
    <input type="text" class="form-control" id="name_course" name="name_course" placeholder="Введите название курса" value="<%= @mark.name_course %>" />
    <% if @errors%>
      <%= @errors[:name_course] %>
    <% end %>
  </div>
  <div class="form-group">
    <label for="task">Введите задачу</label>
    <input type="text" class="form-control" id="task" name="task" placeholder="Введите задачу" value="<%= @mark.task %>" />
    <% if @errors%>
      <%= @errors[:task] %>
    <% end %>
  </div>
  <div class="form-group">
    <label for="mark">Введите оценку</label>
    <input type="number" class="form-control" id="mark" name="mark" placeholder="Введите оценку" value="<%= @mark.mark %>" />
    <% if @errors%>
      <%= @errors[:mark] %>
    <% end %>
  </div>
  <button type="submit" class="btn btn-primary">Добавить оценку</button>
</form>
