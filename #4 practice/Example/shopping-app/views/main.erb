<h3>Список товаров</h3>

<% @available_items.each do |item| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= item.name %></h5>
      <p class="card-text">Успей купить всего за <%= item.price %> руб.</p>
      <a href="/shopping_cart/add/<%= item.id %>" class="btn btn-primary">Добавить в корзину</a>
    </div>
  </div>
<% end%>